@startuml

skinparam linetype ortho
hide circle
hide empty members

entity RuleCategory {
    * Name <<PK>>
    * Description
    * Motivation
    * Color
}

entity Rule {
    * Name <<PK>>
    * RuleCategoryName <<FK>>
    * RuleImportanceLabel <<FK>>
    * Description
    * Motivation
    * OrderPriority
    * Color
}

entity RuleSchedule {
    * ID <<PK>>
    * RuleName <<FK>
    * RuleTier
    * StartDate
    * StopDate
    * Period
    * Weekdays
    * Notes
}

entity RuleImportance {
    * Label <<PK>>
    * Value
}

entity RuleInstance {
    * ID <<PK>>
    * RuleName <<FK>>
    * RuleSchedule <<FK>>
    * DayID <<FK>>
    * Done
    * OrderPriority
    * Notes
}

entity Day {
    * ID <<PK>>
    * Notes
}

RuleCategory ||--o{ Rule
RuleImportance ||--o{ Rule
Rule ||--o{ RuleInstance
Day ||--o{ RuleInstance
RuleSchedule |o--o{ RuleInstance
Rule ||--o{ RuleSchedule

@enduml
