@startuml

skinparam linetype ortho
hide circle
hide empty members

entity Category {
    * Name <<PK>>
    * Description
    * Motivation
    * Color
}

entity Task {
    * Name <<PK>>
    * CategoryName <<FK>>
    * Description
    * Motivation
    * Tier
    * OrderPriority
    * Points
    * Color
}

entity TaskSchedule {
    * ID <<PK>>
    * TaskName <<FK>
    * StartDate
    * StopDate
    * Period
    * Weekdays
    * Notes
}

entity Chore {
    * ID <<PK>>
    * TaskName <<FK>>
    * DayID <<FK>>
    * Done
    * OrderPriority
    * Notes
}

entity Day {
    * ID <<PK>>
    * Notes
    * Points <<Generated>>
    * Percentage <<Generated>>
}

Chore }o-- Day
Chore }o-- Task
Task }o-- Category
TaskSchedule }o-- Task

@enduml
