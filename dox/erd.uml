@startuml

skinparam linetype ortho
hide circle
hide empty members

entity Category {
    * ID
    * Name
    * Description
    * Motivation
    * Color
}

entity Task {
    * ID
    * CategoryID <<FK>>
    * Name
    * Description
    * Motivation
    * Tier
    * OrderPriority
    * Points
    * Color
}

entity TaskSchedule {
    * ID
    * TaskID <<FK>
    * StartDate
    * StopDate
    * Period
    * Weekdays
    * Notes
}

entity Chore {
    * ID
    * TaskID <<FK>>
    * DayID <<FK>>
    * Done
    * Order
    * Notes
}

entity Day {
    * ID
    * Vacation
    * Notes
    * Points <<Generated>>
    * Percetage <<Generated>>
}

Chore }o-- Day
Chore }o-- Task
Task }o-- Category
TaskSchedule }o-- Task

@enduml
